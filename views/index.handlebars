<!--burger icon -->

<h1>Eat-Da-Burger!</h1>

<!-- Pass in data from server.js -->
<h2>Burgers submitted!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
       {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>


 <form class="create-form">

    <div class="form-group">
        <label for="bur"></label>
        <input type="text" id="bur" name="name">
    </div>

